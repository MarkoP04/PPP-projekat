unit Dobavljaci_u;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.Layouts,
  FMX.Controls.Presentation, FMX.StdCtrls, FMX.Edit, FireDAC.Stan.Param;

type
  TForm5 = class(TForm)
    ScrollBox1: TScrollBox;
    Label1: TLabel;
    Label2: TLabel;
    ScrollBox2: TScrollBox;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    Button5: TButton;
    Label7: TLabel;
    Edit1: TEdit;
    Label8: TLabel;
    Edit2: TEdit;
    Label9: TLabel;
    Edit3: TEdit;
    Label10: TLabel;
    Label11: TLabel;
    Button6: TButton;
    Button7: TButton;
    Button8: TButton;
    procedure ButtonClick(Sender: TObject);
    procedure LoadButtons;
    procedure IngredientClick(Sender: TObject);
    procedure Button5Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button6Click(Sender: TObject);
  private
    { Private declarations }
  public
    DobavljacID: Integer;
    Sastojak: String;
  end;

var
  Form5: TForm5;

implementation

{$R *.fmx}

uses
Program_u;

procedure TForm5.LoadButtons;
var
  Btn: TButton;
  I: Integer;
begin

  for I := ScrollBox1.ControlsCount - 1 downto 0 do
    if ScrollBox1.Controls[I] is TButton then
      ScrollBox1.Controls[I].Free;

  Form1.FDQuery1.Close;
  Form1.FDQuery1.SQL.Text := 'SELECT dobavljac_id, ime FROM Dobavljac';
  Form1.FDQuery1.Open;

  I := 0;
  while not Form1.FDQuery1.Eof do
  begin
    Btn := TButton.Create(Self);
    Btn.Parent := ScrollBox1;

    Btn.Text := Form1.FDQuery1.FieldByName('ime').AsString;

    Btn.Position.Y := I * 35;
    Btn.Position.X := 10;
    Btn.Width := ScrollBox1.Width - 20;
    Btn.Height := 30;
    Btn.Tag := Form1.FDQuery1.FieldByName('dobavljac_id').AsInteger;

    Btn.OnClick := ButtonClick;

    Inc(I);
    Form1.FDQuery1.Next;
  end;
end;

procedure TForm5.Button1Click(Sender: TObject);
begin
  Form5.Free;
end;

procedure TForm5.Button2Click(Sender: TObject);
begin
  try

    Form1.FDQueryAction.Close;
    Form1.FDQueryAction.SQL.Text := 'DELETE FROM Sastojci WHERE dobavljac_id = :pID AND sastojak = :pSastojak';
    Form1.FDQueryAction.ParamByName('pID').AsInteger := DobavljacID;
    Form1.FDQueryAction.ParamByName('pSastojak').AsString := Sastojak;
    Form1.FDQueryAction.ExecSQL;

    ShowMessage('Sastojak je uspesno obrisan.');
    LoadButtons;

  except
    on E: Exception do
      ShowMessage('Error: ' + E.Message);
  end;
end;

procedure TForm5.Button3Click(Sender: TObject);
begin
  Form1.FDQueryAction.Close;
  Form1.FDQueryAction.SQL.Text :=
    'INSERT INTO Sastojci (sastojak, cena, dobavljac_id) VALUES (:pSastojak, :pCena, :pDobavljac)';

  Form1.FDQueryAction.ParamByName('pSastojak').AsString := Edit2.Text;
  Form1.FDQueryAction.ParamByName('pCena').AsInteger := StrToInt(Edit3.Text);
  Form1.FDQueryAction.ParamByName('pDobavljac').AsInteger := DobavljacID;

  try
    Form1.FDQueryAction.ExecSQL;
    ShowMessage('Sastojak je uspesno dodan.');
    LoadButtons;
  except
    on E: Exception do
      ShowMessage('Error: ' + E.Message);
  end;
end;

procedure TForm5.Button4Click(Sender: TObject);
begin

  try

    Form1.FDQueryAction.Close;
    Form1.FDQueryAction.SQL.Text := 'DELETE FROM Sastojci WHERE dobavljac_id = :pID';
    Form1.FDQueryAction.ParamByName('pID').AsInteger := DobavljacID;
    Form1.FDQueryAction.ExecSQL;

    Form1.FDQueryAction.Close;
    Form1.FDQueryAction.SQL.Text := 'DELETE FROM Dobavljac WHERE dobavljac_id = :pID';
    Form1.FDQueryAction.ParamByName('pID').AsInteger := DobavljacID;
    Form1.FDQueryAction.ExecSQL;

    ShowMessage('Dobavljac je uspesno obrisan.');
    LoadButtons;

  except
    on E: Exception do
      ShowMessage('Error: ' + E.Message);
  end;
end;

procedure TForm5.Button5Click(Sender: TObject);
begin
  Form1.FDQueryAction.Close;
  Form1.FDQueryAction.SQL.Text :=
    'INSERT INTO Dobavljac (ime) VALUES (:pIme)';

  Form1.FDQueryAction.ParamByName('pIme').AsString := Edit1.Text;

  try
    Form1.FDQueryAction.ExecSQL;
    ShowMessage('Dobavljac je uspesno dodan.');
    LoadButtons;
  except
    on E: Exception do
      ShowMessage('Error: ' + E.Message);
  end;
end;

procedure TForm5.Button6Click(Sender: TObject);
begin
  Form1.FDQuery1.Close;
  Form1.FDQuery1.SQL.Text := 'UPDATE Sastojci SET cena = :pCena WHERE dobavljac_id = :pID';

  Form1.FDQuery1.ParamByName('pCena').AsInteger := StrToInt(Edit3.Text);
  Form1.FDQuery1.ParamByName('pID').AsInteger := DobavljacID;

  try
    Form1.FDQuery1.ExecSQL;
    LoadButtons;
    ShowMessage('Recept je uspesno izmenjen.');
  except
    on E: Exception do
      ShowMessage('Error: ' + E.Message);
  end;
end;

procedure TForm5.ButtonClick(Sender: TObject);
var
  Btn: TButton;
  I: Integer;
  IngredientBtn: TButton;
  Ingredient, Price: string;
begin
  Btn := Sender as TButton;
  Label5.Text := Btn.Text;

  for I := ScrollBox2.ControlsCount - 1 downto 0 do
    if ScrollBox2.Controls[I] is TButton then
      ScrollBox2.Controls[I].Free;

  Form1.FDQuery1.Close;
  Form1.FDQuery1.SQL.Text :=
    'SELECT sastojak, cena FROM Sastojci WHERE dobavljac_id = :id';
  Form1.FDQuery1.ParamByName('id').AsInteger := Btn.Tag;
  Form1.FDQuery1.Open;
  DobavljacID := Btn.Tag;
  Sastojak := Form1.FDQuery1.FieldByName('sastojak').AsString;

  I := 0;
  while not Form1.FDQuery1.Eof do
  begin
    Ingredient := Form1.FDQuery1.FieldByName('sastojak').AsString;
    Price := Form1.FDQuery1.FieldByName('cena').AsString;

    IngredientBtn := TButton.Create(Self);
    IngredientBtn.Parent := ScrollBox2;
    IngredientBtn.Text := Ingredient + ' - ' + Price + ' RSD';

    IngredientBtn.Position.Y := I * 35;
    IngredientBtn.Position.X := 10;
    IngredientBtn.Width := ScrollBox2.Width - 20;
    IngredientBtn.Height := 30;

    IngredientBtn.OnClick := IngredientClick;

    Inc(I);
    Form1.FDQuery1.Next;
  end;
end;

procedure TForm5.IngredientClick(Sender: TObject);
begin
  Label7.Text := Sastojak;
end;

end.
